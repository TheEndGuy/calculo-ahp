<Window x:Class="CalculoAHP.Views.Lancamentos.Janelas.LancamentoOpenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculoAHP"
        WindowStyle="None"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="R02004 - Relatório Decisão" 
        Height="560"
        Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                Panel.ZIndex="2"
                Margin="15,20,15,0"
                Opacity="0.3"
                BorderBrush="Black"
                BorderThickness="2">
        </Border>

        <Button
            Panel.ZIndex="3"
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Opacity="1"
            Margin="5,10,0,0"
            Width="42"
            Height="42"
            ToolTip="Retornar"
            Background="#F16962"
            BorderBrush="{x:Null}"
            Command="{Binding Return}"
            Foreground="White"
            Style="{StaticResource MaterialDesignFloatingActionAccentButton}">
            <materialDesign:PackIcon 
                Kind="KeyboardReturn"
                Width="32"
                Height="32"/>
        </Button>

        <Image
            Stretch="Fill"
            Grid.Row="1"
            Panel.ZIndex="1"
            VerticalAlignment="Top"
            Source="/Imagens/visualizar-lancamento.png"
            DockPanel.Dock="Top"
            Margin="0,20,0,0"
            Height="150"
            Width="470"/>

        <TextBox
            Grid.Row="1"
            Panel.ZIndex="4"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="35,0,0,140"
            FontSize="14"
            Text="{Binding Model.Lancamento.Nome}"
            Height="50"
            Width="130"
            IsReadOnly="True"
            materialDesign:HintAssist.Hint="Nome"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Resources>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#51abb9"/>
                </ResourceDictionary>
            </TextBox.Resources>
        </TextBox>

        <TextBox
            Grid.Row="1"
            Panel.ZIndex="4"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="345,0,0,140"
            FontSize="14"
            Text="{Binding Model.Lancamento.Data}"
            Height="50"
            Width="120"
            IsReadOnly="True"
            materialDesign:HintAssist.Hint="Data"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Resources>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#51abb9"/>
                </ResourceDictionary>
            </TextBox.Resources>
        </TextBox>

        <TextBox
            Grid.Row="1"
            Panel.ZIndex="4"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="175,0,0,140"
            FontSize="14"
            Text="{Binding Model.Lancamento.Descricao}"
            Height="50"
            Width="160"
            IsReadOnly="True"
            materialDesign:HintAssist.Hint="Descrição"
            Style="{StaticResource MaterialDesignFloatingHintTextBox}">
            <TextBox.Resources>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#51abb9"/>
                </ResourceDictionary>
            </TextBox.Resources>
        </TextBox>

        <GroupBox
            Grid.Column="1"
            Grid.Row="1"
            Margin="0,0,0,45"
            VerticalAlignment="Bottom"
            Height="250"
            Width="430"
            Header="DADOS DA DECISÃO">
            <!-- Alteração da cor -->
            <GroupBox.Resources>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#51abb9" />
                    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#51abb9"/>
                </ResourceDictionary>
            </GroupBox.Resources>

            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Kind="Finance"
                            Height="35"
                            Width="35"
                            Foreground="White"
                            VerticalAlignment="Center"
                            Opacity="1"/>
                        <TextBlock
                            FontSize="20"
                            Margin="8,0,0,0"
                            Foreground="White"
                            Opacity="1"
                            VerticalAlignment="Center"
                            Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                            Text="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </GroupBox.HeaderTemplate>

            <DataGrid
                RowDetailsVisibilityMode="VisibleWhenSelected"
                EnableRowVirtualization="True"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Height="180"
                AutoGenerateColumns="False"
                IsReadOnly="True"
                ItemsSource="{Binding Model.Items}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}"/>
                    <DataGridTextColumn Header="Peso" Binding="{Binding Peso}"/>
                </DataGrid.Columns>
            </DataGrid>

        </GroupBox>

        <!-- Barra pequena -->
        <StackPanel 
            Grid.Column="1"
            Grid.Row="0"
            Height="10"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            Width="670"
            Background="#51abb9">
        </StackPanel>

        <Button
            Height="30"
            Grid.Row="1"
            Width="120"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Center"
            Margin="0,0,0,10"
            Content="Gerar relatório"
            FontSize="12"
            Background="#F16962"
            BorderBrush="#F16962"
            Command="{Binding Gerar}">
        </Button>

    </Grid>
</Window>
